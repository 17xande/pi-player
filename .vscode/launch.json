{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Remote (SSH tunnel)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "${workspaceFolder}",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true
    },
    {
      "name": "Debug pi-player (local)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "showLog": true
    }
  ]
}
